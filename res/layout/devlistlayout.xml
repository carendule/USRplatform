<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dinwei.caren.gpsandbeidou.DevListActivity">
    <ListView
        android:id="@+id/devlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff">
    </ListView>
    <TextView
        android:id="@+id/getlistnow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A9A9A9"
        android:visibility="visible"
        android:text="正在获取列表"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/nolist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A9A9A9"
        android:visibility="gone"
        android:text="无列表信息"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/datatime"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/timetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="选择开始时间"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="年"
                    android:textSize="20dp" />
                <NumberPicker
                    android:id="@+id/year"
                    android:layout_width="60dp"
                    android:layout_height="120dp"></NumberPicker>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="月"
                    android:textSize="20dp" />
                <NumberPicker
                    android:id="@+id/month"
                    android:layout_width="60dp"
                    android:layout_height="120dp"></NumberPicker>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="日"
                    android:textSize="20dp" />
                <NumberPicker
                    android:id="@+id/day"
                    android:layout_width="60dp"
                    android:layout_height="120dp"></NumberPicker>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="时"
                    android:textSize="20dp" />
                <NumberPicker
                    android:id="@+id/hour"
                    android:layout_width="60dp"
                    android:layout_height="120dp"></NumberPicker>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="分"
                    android:textSize="20dp" />
                <NumberPicker
                    android:id="@+id/minute"
                    android:layout_width="60dp"
                    android:layout_height="120dp"></NumberPicker>
            </LinearLayout>
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/ok"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="15dp"
                android:text="确定"
                android:textSize="25dp"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/cancel"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF6347"
                android:text="取消"
                android:textSize="25dp"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:roundedCorners="true"
                app:showOutline="false" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hisdata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#A9A9A9"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温度(℃)"
            android:textColor="@color/white"/>
        <ListView
            android:id="@+id/temphis"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="速度(Km/h)"
            android:textColor="@color/white"/>
        <ListView
            android:id="@+id/speedhis"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加速度(Km/h²)"
            android:textColor="@color/white"/>
        <ListView
            android:id="@+id/acceleratehis"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="应变力(Pa)"
            android:textColor="@color/white"/>
        <ListView
            android:id="@+id/stresshis"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </ListView>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/hisback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="返回"
            android:textSize="25dp"
            android:backgroundTint="#FF6347"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>